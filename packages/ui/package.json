{
  "name": "@beavercoding/ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    "./globals.css": "./src/styles/globals.css",
    "./lib/*": {
      "types": "./src/lib/*.ts",
      "default": "./src/lib/*.ts"
    },
    "./hooks/*": {
      "types": "./src/hooks/*.ts",
      "default": "./src/hooks/*.ts"
    },
    "./components/*": {
      "types": "./src/components/*.tsx",
      "default": "./src/components/*.tsx"
    }
  },
  "dependencies": {
    "class-variance-authority": "^0.7",
    "clsx": "^2",
    "lucide-react": "^0.469",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.3",
    "react": "^19",
    "react-dom": "^19",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3",
    "tw-animate-css": "^1"
  },
  "devDependencies": {
    "@beavercoding/typescript-config": "workspace:*",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
